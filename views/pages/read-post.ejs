<script>
    function copyCode(button) {
        const code = button.parentElement.querySelector('code').innerText;
        navigator.clipboard.writeText(code).then(() => {
            button.innerHTML = '<i class="fi fi-rr-check"></i>'; // show check
            setTimeout(() => {
                button.innerHTML = '<i class="fi fi-rr-duplicate"></i>'; // revert to copy icon
            }, 1500);
        }).catch(err => {
            console.error('Copy failed', err);
            button.innerHTML = '<i class="fi fi-rr-cross-small"></i>'; // show error
        });
    }
</script>


